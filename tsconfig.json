{
  "compilerOptions": {
    "declaration": false,
    "outDir": "./build/lib",
    "module": "es6",
    "target": "es6",
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "skipLibCheck": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // TODO not sure we need it
    "isolatedModules": false, // for esbuild, see https://esbuild.github.io/content-types/#isolated-modules
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@typed-mxgraph"
    ],
    "stripInternal": true,
    "noImplicitOverride": true,
  },
  "include": [
    "src/**/*"
  ]
}

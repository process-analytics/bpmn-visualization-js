{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "module": "es6",
    "target": "es6",
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "skipLibCheck": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/mxgraph-type-definitions"
    ]
  },
  "include": [
    "src/**/*"
  ]
}

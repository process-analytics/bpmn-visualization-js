{
  "compilerOptions": {
    "declaration": false,
    "outDir": "./build/lib",
    "module": "es6",
    "target": "es6",
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "skipLibCheck": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@typed-mxgraph"
    ]
  },
  "files": ["node_modules/@svgdotjs/svg.js/svg.js.d.ts"],
  "include": [
    "src/**/*"
  ]
}

{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "ES2015"],
    "allowJs": true, // TODO false
    "skipLibCheck": true, // TODO false
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // this configuration requires to have types declaration in the package.json "exports" attribute
    "resolveJsonModule": true,  // TODO false or remove
    "isolatedModules": true,
  },
}
